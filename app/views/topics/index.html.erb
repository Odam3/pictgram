<div class="topic-index-wrapper">
  <div class="container">
    <% @topics.each do |topic| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">
            <h2 class="topic-author">
              <%= topic.user.name %>
            </h2>
            <%= image_tag topic.image.url %>
            <% if topic.favorite_users.include?(current_user) %>
              <%= link_to("/favorites/#{topic.id}/destroy", method: :post) do %>
                 <span class="fa fa-heart like-btn-unlike fa-2x"></span>
              <% end %>
            <% else %>
              <%= link_to favorites_path(topic_id: topic.id), method: :post do %>
                <span class="fa fa-heart like-btn fa-2x"></span>
              <% end %>
            <% end %>
            <%= topic.favorites.count %>
              
              
              
            <%= link_to comments_new_path(topic_id: topic.id) do %>
              <%= image_tag 'icons/comment.png', class: 'topic-index-icon' %>
            <% end %>
             
            <p class="topic-text">
              <%= topic.description %>
            </p>
            <p class="topic-text2">コメント</p>
          <% topic.comments.each do |comment| %> 
            <p class="topic-text">
              <%= comment.comment %>
            </p>
          <% end %> 
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>